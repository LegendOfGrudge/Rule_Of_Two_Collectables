  <p style="text-align: center; font-style: italic;">
    Step into our store and start your journey in collecting beloved characters and iconic treasures!
  </p>
</div>

<div class="toy-images-container">
  <% @random_toy_images.each do |collection_name, toy_info| %>
    <div class="collection-toy">
      <h3><%= toy_info[:brand_name] || 'N/A' %> - <%= collection_name %></h3>
      <% if toy_info.present? %>
        <%= image_tag toy_info[:image], alt: "#{collection_name} Toy Image" %>

      <% else %>
        <p>No toy image available for this collection.</p>
      <% end %>
    </div>
  <% end %>
</div>




