<h1 class="headline"><%= @collection.name %></h1>
<br/>
<% @toys.each do |toy| %>
  <% if toy.quantity > 95 %>
    <div class="line-item">
      <img src="<%= toy.image %>" alt="<%= toy.name %>">
      <div class="line-item-details">
        <div class="name"><%= link_to toy.name, toy %></div>
        <div>
          <p>Reqular Price: $<%= sprintf('%.2f', toy.price) %> Sale Price: <span class="price">$<%= sprintf('%.2f', toy.price * 0.9) %></span></p>
          <p>Quantity: <span class="price"><%= toy.quantity %></span></p>
        </div>
      </div>
    </div>
  <% else %>
    <div class="line-item">
      <img src="<%= toy.image %>" alt="<%= toy.name %>">
      <div class="line-item-details">
        <div class="name"><%= link_to toy.name, toy %></div>
        <div>
          <p>Price: <span class="price">$<%= sprintf('%.2f', toy.price) %></span></p>
          <p>Quantity: <span class="price"><%= toy.quantity %></span></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<div class="pagination-container">
  <%= paginate @toys %>
</div>